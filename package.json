{
  "name": "@increase21/react-native-overlay",
  "version": "1.0.0",
  "description": "React Native module for Android overlay permission, screen wake, and lock screen UI management",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "*.podspec",
    "react-native.config.js",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/.gradle",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "prepare": "bob build",
    "build": "bob build",
    "release": "npm run typecheck && npm run build && npm publish --access public",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react-native",
    "android",
    "overlay",
    "react native overlay",
    "bring app to foreground",
    "system-alert-window",
    "wake-lock",
    "lock-screen",
    "foreground"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/increase21/rn-overlay.git"
  },
  "author": "Increase",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/increase21/rn-overlay/issues"
  },
  "homepage": "https://github.com/increase21/rn-overlay#readme",
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@types/react": "^18.2.44",
    "react": "18.2.0",
    "react-native": "0.73.0",
    "react-native-builder-bob": "^0.23.2",
    "typescript": "^5.0.2"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}